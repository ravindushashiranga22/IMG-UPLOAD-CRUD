<%- include('layout/header') %>

<div class="content">
    <div class="d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 60px);">
        <div class="col-lg-6">
            <div class="border p-4 rounded bg-light shadow-sm">
                <div class="card-header bg-success">
                    <h1 class="text-center mb-4">Edit User (<%= user.name %>)</h1>
                </div>
                <!-- User Form -->
                <form action="/update/<%= user._id %>" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter name" value="<%= user.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" value="<%= user.email %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="tel" id="phone" name="phone" class="form-control" placeholder="Enter phone" value="<%= user.phone %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Select Image</label>
                        <input type="file" id="image" name="image" class="form-control" accept="image/*">
                        <% if (user.image) { %>
                            <img src="/uploads/<%= user.image %>" width="100" class="img-thumbnail mt-1" alt="User Image">
                        <% } %>
                    </div>
                    <input type="hidden" name="old_image" value="<%= user.image %>"/>
                    <button type="submit" class="btn btn-success d-block mx-auto">Update User</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
