<%- include('layout/header') %>

<div class="content">
    <div class="row my-4 justify-content-center">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>

            <div class="table-responsive">
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark text-center"> <!-- Added text-center here -->
                            <th class="text-center">ID</th>
                            <th class="text-center">Image</th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Phone</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index) => { %>
                            <tr class="align-middle">
                                <td><%= index + 1 %></td> <!-- Adjusted index to be 1-based -->
                                <td><img src="/uploads/<%= user.image %>" width="50" class="img-thumbnail" alt="User Image"/></td>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.phone %></td>
                                <td>
                                    <a href="/edit/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= user._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <% if (users.length === 0) { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
